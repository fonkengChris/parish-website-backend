# Server Configuration
PORT=5000
NODE_ENV=development

# Database - MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/parish-website

# Authentication
JWT_SECRET=change-me-in-production

# CORS (comma-separated origins, optional)
# ALLOWED_ORIGINS=http://localhost:3000

# Email Service (SMTP) - Optional
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME=Parish Website

# WhatsApp Messaging (Twilio) - Optional
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_WHATSAPP_NUMBER=+1234567890
# Fallback regular phone number if WhatsApp-specific number not provided
TWILIO_PHONE_NUMBER=+1234567890
